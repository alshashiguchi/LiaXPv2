# Azure SQL Server Connection
AZURE_SQL_CONNECTIONSTRING=Server=tcp:your-server.database.windows.net,1433;Initial Catalog=liaxp;Persist Security Info=False;User ID=your-user;Password=your-password;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;

# JWT Configuration
JWT_ISSUER=self
JWT_SIGNING_KEY=your-secret-key-min-32-characters-long-please-change-this
JWT_AUDIENCE=liaxp-api
JWT_ACCESS_TOKEN_TTL_MIN=30

# For Azure AD JWT (uncomment and configure if using Azure AD)
# JWT_ISSUER=https://sts.windows.net/{tenant-id}/
# JWT_AUTHORITY=https://login.microsoftonline.com/{tenant-id}/v2.0
# JWT_AUDIENCE={app-client-id}

# WhatsApp Provider (twilio or meta)
WHATS_PROVIDER=twilio

# Twilio Configuration (for MVP)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token-here
TWILIO_FROM=whatsapp:+14155238886

# Meta Cloud API Configuration (for production)
# META_WA_TOKEN=your-meta-token-here
# META_WA_PHONE_ID=your-phone-id-here
# META_WA_VERIFY_TOKEN=your-verify-token-here
# META_WA_APP_SECRET=your-app-secret-here

# HITL (Human in the Loop) Configuration
REVIEW_REQUIRED=true
WHATS_SEND_ON_APPROVE=true
DATA_STALE_BLOCK=true
ADMIN_WHITELIST_PHONES=+5511999999999

# Rate Limiting
RATE_LIMIT_AUTHENTICATED_PER_MIN=60
RATE_LIMIT_PUBLIC_PER_MIN=30
